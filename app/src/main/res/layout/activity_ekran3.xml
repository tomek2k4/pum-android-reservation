<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="test.tomek.com.cwiczenie2_umawianiewizyt.Ekran3">

    <TextView android:text="@string/label_comments_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_comments" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText_commentWindow"
        android:layout_below="@+id/label_comments"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_dalej_string"
        android:id="@+id/button_dalejEkran3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="onDalejEkran3Clicked" />

</RelativeLayout>
